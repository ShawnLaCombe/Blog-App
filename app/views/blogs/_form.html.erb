<%= form_for @blog do |blog_fields| %>

  <%= blog_fields.label :title %>
  <%= blog_fields.text_field :title, :size => 50 %><br>

  <%= blog_fields.label :content %>
  <%= blog_fields.text_field :content, :size =>150 %><br>

  <%= blog_fields.label :owner %>
  <%= blog_fields.text_field :owner %><br><br>

  <%= blog_fields.submit %>

<% end %>